@using Ziggle.Web.Services;
@inherits LayoutComponentBase
@inject UserService _userService

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudSpacer/>
        <MudAvatar Image="@_userService.User?.AvatarUrl" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-2 pt-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>